.mp-design-component-richtext-preview {
  padding: 0 10px;
  padding-top: 10px;
  box-sizing: border-box;
  font-size: 16px;
  color: #333;
  line-height: 1.5;
  overflow: hidden;
  text-align: left;
  word-wrap: break-word;
  position: relative;

  &--fullscreen {
    padding: 0;
    margin: 0;
  }

  table,
  th,
  td {
    border: 1px solid #e5e5e5;
  }

  table {
    border-collapse: collapse;
  }

  td {
    padding: 5px 10px;
  }
}